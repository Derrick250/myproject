<android.support.v7.widget.CardView
    android:id="@+id/item_condom"
    style="@style/cardview"
    card_view:cardCornerRadius="5dp"
    card_view:contentPadding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="@color/colorPrimaryDark"
            android:src = "@drawable/condom"
            style = "@style/images"
            android:id="@+id/item_condom_imageView"/>

        <TextView
            style="@style/categories"
            android:text="@string/condoms"
            android:layout_toRightOf="@id/item_condom_imageView"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>